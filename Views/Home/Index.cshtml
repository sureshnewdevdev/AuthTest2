<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        /* styles.css */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding-top: 70px; /* Increased for fixed navbar */
            background-color: #f0f2f5;
            background-image: url(../Finance/register.jpg);
            background-repeat: no-repeat;
            background-size: 100% 100%;
            flex-direction: column;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .register-container {
            width: 600px;
            padding: 2rem;
            background-color: rgba(221, 141, 84, 0.4);
            box-shadow: 0 4px 8px rgb(240, 211, 183);
            border-radius: 8px;
            text-align: center;
            margin-top: 20px; /* Additional margin for spacing */
        }

        h2 {
            color: #333;
        }

        .form-group {
            margin-bottom: 1rem;
            text-align: left;
        }

            .form-group label {
                display: block;
                font-size: 0.9rem;
                color: #555;
            }

            .form-group input {
                width: 100%;
                padding: 0.5rem;
                margin-top: 0.3rem;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

        .register-btn {
            width: 100%;
            padding: 0.7rem;
            background-color: #c74b16;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 1rem;
        }

            .register-btn:hover {
                background-color: rgb(234, 234, 100);
            }

        .login-link {
            margin-top: 1rem;
        }

            .login-link a {
                color: rgb(244, 78, 23);
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("FINANCE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="register-container">
        <h2>Create an Account</h2>
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="UserId">User Id<a style="color: red">*</a></label>
                <input type="number" id="number" name="number" required placeholder="Enter your UserId">
            </div>
            <div class="form-group">
                <label for="FirstName">First Name<a style="color: red">*</a></label>
                <input type="text" id="name" name="name" required placeholder="Enter your First name">
            </div>
            <div class="form-group">
                <label for="LastName">Last Name<a style="color: red">*</a></label>
                <input type="text" id="name" name="name" required placeholder="Enter your Last name">
            </div>
            <div class="form-group">
                <label for="Email">Email<a style="color: red">*</a></label>
                <input type="email" id="email" name="email" required placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label for="PasswordHash">Password<a style="color: red">*</a></label>
                <input type="password" id="password" name="password" required placeholder="Enter your password">
            </div>
            <div class="form-group">
                <label for="RoleId">Role Id<a style="color: red">*</a></label>
                <input type="number" id="role" name="role" required placeholder="Enter your RoleId">
            </div>
            <button type="submit" class="register-btn">Register</button>
            <div class="login-link">
                <p>Already have an account? <a href="login.html">Login</a></p>
            </div>
        </form>
    </div>
</body>
</html>
